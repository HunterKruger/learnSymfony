{% extends 'base.html.twig' %}
{% block body %}
    <h1>Connection</h1>
    <form action="{{ path('security_login') }}" method="post">
        <div class="form-group">
            <input placeholder="Email address" required name="_username" type="text" class="form-control">
        </div>
        <div class="form-group">
            <input placeholder="Password" required name="_password" type="password" class="form-control">
        </div>
        <div class="form-group">
            <button type="summit" class="btn btn-success">Login</button>
        </div>
    </form>
{% endblock %}
 